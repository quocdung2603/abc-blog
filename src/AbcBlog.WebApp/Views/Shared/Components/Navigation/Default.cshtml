@using AbcBlog.Core.Domain.Identity
@using AbcBlog.WebApp.Extensions
@using Microsoft.AspNetCore.Identity
@inject IOptions<SystemConfig> _config;
@inject SignInManager<AppUser> signInManager;
@model List<NavigationItemViewModel>

<nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
    <div class="container px-4 px-lg-5">
        <a class="navbar-brand" href="/">@_config.Value.AppName</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            Menu
            <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse gap-3" id="navbarResponsive">
            <ul class="navbar-nav ms-auto py-4 py-lg-0">
                <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="@UrlConsts.Home">Home</a></li>
                <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="@UrlConsts.About">About</a></li>
                <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="@UrlConsts.Series">Series</a></li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle px-lg-3 py-3 py-lg-4" href="@UrlConsts.Posts" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Posts
                    </a>
                    <ul class="dropdown-menu">
                        @foreach (var item in Model)
                        {
                            <li><a class="dropdown-item" title="@item.Name" href="@string.Format(UrlConsts.PostsByCategorySlug, item.Slug)">@item.Name</a></li>
                        }
                    </ul>
                </li>
                <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="@UrlConsts.Contact">Contact</a></li>
            </ul>
            <form class="d-flex" role="search">
                <input class="form-control me-2 input-group-sm" type="search" placeholder="Search" aria-label="Search" />
                <button class="btn btn-outline-success btn-sm" type="submit">Search</button>
            </form>
            <span class="navbar-text ml-lg-1">
                @if (signInManager.IsSignedIn(User))
                {
                    <ul class="navbar-nav ms-auto py-4 py-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle px-lg-3 py-3 py-lg-4" href="@UrlConsts.Posts" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @User.GetFirstName()
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" title="Profile" href="@UrlConsts.Profile">Profile</a></li>
                                <li>
                                    <form id="logoutForm" class="form-inline" asp-controller="Profile" asp-action="Logout">
                                        <button class="dropdown-item" title="Profile" type="submit">Sign Out</button>
                                    </form>
                                </li>


                            </ul>
                        </li>
                    </ul>
                }
                else
                {
                    <a class="btn btn-primary btn-sm" href="@UrlConsts.Login">Login</a>
                    <a class="btn btn-outline-primary btn-sm" href="@UrlConsts.Register">Register</a>
                }
            </span>
        </div>
    </div>
</nav>